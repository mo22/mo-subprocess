{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "lib": [ "es2020" ],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "compileOnSave": true
}
